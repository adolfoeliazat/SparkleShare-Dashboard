script(type="text/javascript")
  $(function() {
    $.ajax({
      url: '/getLinkCode',
      dataType: 'json',
      success: function(data) {
        $('#linkcode').html(data.code);
        $('#timeleft').html(data.validFor);
        append_qrcode(5, 'linkqr', 'SSHARE;URL:' + data.url + ';CODE:' + data.code);
        // TODO auto refresh
      }
    });
  });
